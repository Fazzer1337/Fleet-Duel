<Window x:Class="Fleet_Duel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Fleet_Duel.Views"
        Title="Fleet Duel - Морской бой" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель статуса -->
        <Border Grid.Row="0" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="statusText" FontSize="16" FontWeight="Bold" 
                           Text="Расставьте корабли" VerticalAlignment="Center"/>
                <TextBlock x:Name="shipInfoText" Margin="20,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Игровое поле -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Игрок -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="Ваше поле" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <WrapPanel x:Name="playerBoardPanel" Width="300" Height="300" Margin="0,10"/>
            </StackPanel>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Center" 
                          Background="Transparent"/>

            <!-- Противник -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="Поле противника" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <WrapPanel x:Name="enemyBoardPanel" Width="300" Height="300" Margin="0,10"/>
            </StackPanel>
        </Grid>

        <!-- Панель управления -->
        <Border Grid.Row="2" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="startButton" Content="Начать игру" Click="StartButton_Click"/>
                <Button x:Name="autoPlaceButton" Content="Расставить автоматически" Click="AutoPlaceButton_Click"/>
                <Button x:Name="rotateButton" Content="Повернуть корабль" Click="RotateButton_Click"/>
                <Button x:Name="settingsButton" Content="Настройки" Click="SettingsButton_Click"/>
                <Button x:Name="newGameButton" Content="Новая игра" Click="NewGameButton_Click"/>
                <Button x:Name="surrenderButton" Content="Сдаться" Click="SurrenderButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
