<UserControl x:Class="Fleet_Duel.Views.CellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="30"
             x:Name="root"
             Cursor="Hand">

	<Border x:Name="cellBorder" BorderBrush="LightGray" BorderThickness="1" Background="AliceBlue">
		<TextBlock x:Name="cellText" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="12" FontWeight="Bold"/>
	</Border>
</UserControl>
