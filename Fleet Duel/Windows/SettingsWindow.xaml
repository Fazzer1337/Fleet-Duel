<Window x:Class="Fleet_Duel.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки игры" Height="430" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightGray" Padding="10" CornerRadius="5">
            <TextBlock Text="Настройки игры" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1" Margin="0,20">
            <TextBlock Text="Уровень сложности:" FontWeight="Bold"/>
            <ComboBox x:Name="difficultyComboBox">
                <ComboBoxItem Content="Легкий (случайные выстрелы)" Tag="Easy"/>
                <ComboBoxItem Content="Средний (базовая логика)" Tag="Medium"/>
                <ComboBoxItem Content="Сложный (продвинутая тактика)" Tag="Hard"/>
            </ComboBox>

            <TextBlock Text="Режим игры:" FontWeight="Bold" Margin="0,15,0,0"/>
            <ComboBox x:Name="modeComboBox">
                <ComboBoxItem Content="Игрок против ИИ" Tag="VsAI"/>
                <ComboBoxItem Content="Hotseat (2 игрока за одним ПК)" Tag="Hotseat"/>
            </ComboBox>

            <TextBlock Text="Тема оформления:" FontWeight="Bold" Margin="0,20,0,0"/>
            <ComboBox x:Name="themeComboBox">
                <ComboBoxItem Content="Светлая тема" Tag="Light"/>
                <ComboBoxItem Content="Темная тема" Tag="Dark"/>
            </ComboBox>

            <StackPanel Margin="0,20">
                <CheckBox x:Name="hintsCheckBox" Content="Показывать подсказки при расстановке"/>
                <CheckBox x:Name="autoCompleteCheckBox" Content="Автозавершение вокруг уничтоженных кораблей"/>
                <CheckBox x:Name="showShipsCheckBox" Content="Показывать корабли противника в конце игры"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="2" Background="LightGray" Padding="10" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="saveButton" Content="Сохранить" Click="SaveButton_Click" Width="114"/>
                <Button x:Name="cancelButton" Content="Отмена" Click="CancelButton_Click"
                        Background="LightCoral"/>
                <Button x:Name="defaultButton" Content="По умолчанию" Click="DefaultButton_Click" Width="146"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
